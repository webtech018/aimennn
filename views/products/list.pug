extends ../layout

block content
    h1  Products
            <br/>
    .row
        .col-sm-8
            h1=title
        .col-sm-4
            a(href="/products/add", class="btn btn-success float-right") Add New Product
            <br/>
            <br/>
            <br/>
    table.table
        thead
            tr
                th ProductsName
                th ProductsCategory
                th ProductsDetails
                th  ProductsPrice
                th actions

        tbody
            each product in products
                tr  
                    td=product.name
                    td=product.contact
                    td=product.city
                    td=product.service
                    td
                        a(href="/products/delete/"+product._id, class="btn btn-danger") Delete


